page {
  color: #fff;
}

image {
  display: block;
}

/* 整体布局 */
.bg-image,
.bg-cover {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.bg-cover {
  background-color: rgba(0, 0, 0, .5);
  backdrop-filter: blur(20px);
}

.tab {
  font-size: 28rpx;
  color: #999;
}

.tab .divider {
  margin: 0 10rpx;
}

.active {
  color: #fff;
}

/* 歌曲内容布局 */
.player {
  padding: 20rpx 30rpx;
  display: flex;
  flex-flow: column;
  box-sizing: border-box;
  height: 100%;
}


.player .lyric {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cover image {
  width: 100%;
  border-radius: 50%;
  animation: rotate 20s linear infinite;
}

.player .title {
  font-size: 36rpx;
  font-weight: bold;
}


.player .songsInfo {
  font-size: 26rpx;
  margin: 20rpx 0;
  color: #ccc;
}

.player .songsInfo .title {
  color: #fff;
}

.songsInfo view {
  margin: 10rpx 0;
}


.progress .slider {
  margin: 10rpx 0;
}

.progress .time {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}

.contral {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.contral image {
  width: 70rpx;
}

.contral .btn-prev,
.contral .btn-next {
  width: 50rpx;
}

.contral .btn-pause {
  width: 80rpx;
}

/* 歌词 */
.lyric-scroll {
  text-align: center;
  color: #999;
  overflow: hidden;
  height: 100%;
}

.lyric-item {
  height: 35px;
  line-height: 35px;
}

::-webkit-scrollbar {
  display: none;
  /* Chrome Safari */
}

/* 歌单 */
.info{
  display: flex;
  align-items: center;
  color: #999;
  font-size: 36rpx;
}
.show {
  color: greenyellow;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

