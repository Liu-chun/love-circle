.header {
  position: relative;
  height: 450rpx;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  width: 100vw;
  left: -10rpx;
}

.header>image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -2;
  background-color: rgba(0, 0, 0, 0.5);
  filter: blur(8rpx);
}

.header .bg-cover {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: -1;
  background-color: rgba(0, 0, 0, 0.5);
}

.header .cont {
  display: flex;
  justify-content: center;
  align-items: center;
}

.cont>image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 5%;
}

.cont .rightInfo {
  color: #fff;
  width: 450rpx;
  margin-left: 40rpx;
}

.cont .rightInfo .tit {
  font-size: 34rpx;
}

.cont .rightInfo .author {
  display: flex;
  align-items: center;
  padding: 20rpx 0
}

.cont .author image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%
}

.cont .author text {
  font-size: 28rpx;
  margin-left: 20rpx;
}

.cont .desc {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 28rpx;
}

.bottom {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  margin-top: 40rpx;
}

.bottom .love {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 40rpx;
}

.bottom .love image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.bottom .share {
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom .share image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}