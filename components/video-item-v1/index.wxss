/* components/video-item-v1/index.wxss */
.videoList {
  width: 100%;
  height: 300rpx;
}

.videoList .img {
  position: relative;
}

.videoList .img .info {
  position: absolute;
  right: 0;
  left: 0;
  bottom: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 5rpx;
}

.videoList .img .info image {
  width: 30rpx;
  height: 30rpx;
  padding-right: 10rpx;
}

.videoList .img .info text {
  color: #fff;
  font-size:28rpx
}

.videoList image {
  width: 100%;
  height: 100%;
  border-radius:5%;
}

.videoList .title {
  display: flex;
  align-items: center;
}

.videoList .title text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}