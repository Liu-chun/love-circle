/* components/song-menu-v1/index.wxss */
.item {
  display: inline-block;
  vertical-align: top;
  width: 220rpx;
  margin-left: 20rpx;
  white-space: normal;
}

.item:last-of-type{
  /* padding-right: 20rpx; */
}

.item .info {
  position: relative;
}

.item .info image {
  width: 100%;
  border-radius: 5%;
}
.item .info .playCount {
  position: absolute;
  bottom: 10rpx;
  right: 0;
  font-size: 28rpx;
  color: #fff;
  padding: 0 10rpx;
  background-color: rgba(0, 0, 0, .4);
}

.item .desc {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

