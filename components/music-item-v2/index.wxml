<!--components/music-item-v2/index.wxml-->
<view class="item" bindtap="handleItemClick" data-id="{{item.id}}">
  <view class="index">{{ index + 1 }}. </view>
  <view class="cont">
    <view class="title">{{item.name}}</view>
    <view class="author">
      <image src="../../assets/images/icons/sq_icon.png" mode="widthFix"></image>
      <text>{{item.ar[0].name || item.artists[0].name}}</text>
      <text>{{item.alia[0] || item.alias[0]}}</text>
    </view>
  </view>
</view>